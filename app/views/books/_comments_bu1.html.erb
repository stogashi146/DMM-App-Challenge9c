 <% book.post_comments.each do |post_comment| %>

   <div>
     <%= link_to user_path(post_comment.user) do %>
       <%= attachment_image_tag(post_comment.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %><br>
       <%= post_comment.user.name %>
     <% end %>
   </div>
   <div><%= post_comment.comment %></div>

     <% if post_comment.user == current_user %>
       <div>
       <%= link_to 'Destroy', book_post_comment_path(post_comment.book,post_comment), method: :delete,remote:true,data:{confirm:"削除しますか？"},class:"btn btn-sm btn-danger destroy_book_#{post_comment.id}"%>
       </div>
     <% end %>
   <% end %>